<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CommonFragment"
        android:id="@+id/constraintLayout">
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/line_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:background="@android:color/background_dark" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.082" android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/line_horizontal"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="@string/inputButton"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/recordButton"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>